{
  "name": "pick-at-random",
  "version": "0.0.1",
  "description": "Pick Twitter users at random",
  "license": "MIT",
  "engines": {
    "node": ">=12.x",
    "yarn": "1.x.x"
  },
  "scripts": {
    "format": "prettier --write ./src",
    "format:check": "prettier --check .",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch --verbose true",
    "lint": "eslint ./src",
    "prettier:check": "prettier --check ./src",
    "sanity-check": "yarn prettier:check && yarn lint",
    "cleanup": "rm -rf build",
    "prebuild": "yarn cleanup && yarn sanity-check",
    "build": "tsc --sourceMap false --declaration false -p ./"
  },
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "eslint": "^7.12.1",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.3",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "dotenv": "^8.2.0"
  }
}
