{
  "name": "pick-at-random",
  "version": "0.0.1",
  "description": "Pick Twitter users at random",
  "license": "MIT",
  "engines": {
    "node": "14.x",
    "yarn": "1.x.x"
  },
  "scripts": {
    "format": "prettier --write .",
    "format:check": "prettier --check ./src ./api",
    "lint": "eslint ./src ./api",
    "sanity-check": "yarn format:check && yarn lint",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch --verbose true",
    "test:codecov": "NODE_ENV=test jest --coverage=true",
    "cleanup": "rm -rf build",
    "prebuild:prod": "yarn cleanup",
    "build:prod": "tsc --sourceMap false --declaration false -p ./",
    "dev:twitter-webhook": "vercel dev",
    "register-webhook": "NODE_ENV=development ts-node src/scripts/register-webhook",
    "delete-webhook": "NODE_ENV=development ts-node src/scripts/delete-webhook",
    "create-subscription": "NODE_ENV=development ts-node src/scripts/create-subscription",
    "get-user-token": "NODE_ENV=development ts-node src/scripts/get-user-token",
    "persist-mock-tweet": "NODE_ENV=development ts-node src/scripts/persist-mock-tweet",
    "par-responder:deploy": "rm -rf .build && NODE_ENV=production yarn serverless deploy",
    "par-responder:dashboard": "yarn serverless dashboard",
    "par-responder:development": "NODE_ENV=development yarn serverless schedule",
    "par-responder:logs": "yarn serverless logs -f computeAndRespond -t"
  },
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "@types/minimist": "^1.2.1",
    "@types/redis-mock": "^0.17.0",
    "@types/request": "^2.48.5",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "eslint": "^7.12.1",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "jest": "^26.6.3",
    "minimist": "^1.2.5",
    "node-mocks-http": "^1.10.1",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "redis-mock": "^0.56.3",
    "serverless-offline-scheduler": "^0.4.2",
    "serverless-plugin-typescript": "^1.1.9",
    "ts-jest": "^26.5.3",
    "ts-node": "^9.1.1",
    "typescript": "4.2.3",
    "vercel": "^22.0.1"
  },
  "dependencies": {
    "chrono-node": "^2.2.6",
    "dotenv": "^8.2.0",
    "handy-redis": "^2.2.1",
    "http-status-codes": "^2.1.4",
    "moment": "^2.29.1",
    "node-twitter-api": "^1.8.0",
    "redis": "^3.1.2",
    "request": "^2.88.2",
    "serverless": "^2.38.0",
    "twitter-api-v2": "^1.6.5",
    "twitter-error-handler": "^3.1.0",
    "twitter-lite": "^1.1.0"
  }
}
